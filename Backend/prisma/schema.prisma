generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NormalUser{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  userName String
  products Product[]
  comments Comments[]
}


model Product{
  id Int @unique @default(autoincrement())
  title String @unique
  description String
  author NormalUser @relation(fields: [authorId] , references: [id])
  authorId Int
  comments Comments[]
 
}

model Comments{
  id Int @unique @default(autoincrement())
  content String
  author NormalUser  @relation(fields: [authorId] , references: [id])
  authorId Int
  product Product @relation(fields: [productId] , references: [id])
  productId Int
}

