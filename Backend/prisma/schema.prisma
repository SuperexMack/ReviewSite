generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NormalUser{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  userName String
  reviews Review[]
}

model OwnerUser{
  id Int @id @default(autoincrement())
  email String
  password String
  organizationName String
  currentAllowed Boolean @default(false)
  newProductDetail newProduct[]
}

model Review{
  id Int @unique @default(autoincrement())
  comment String
  author NormalUser  @relation(fields: [authorId] , references: [id])
  authorId Int
}

model newProduct{
  id Int @unique @default(autoincrement())
  author OwnerUser @relation(fields: [aurhorId],references: [id])
  aurhorId Int
}
